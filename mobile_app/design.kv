WindowManager:
    MainWindow:
    SecondWindow:

<MainWindow>:
    name: "main"

    GridLayout:
        cols:1
        size: root.width, root.height
        GridLayout:
            cols:2
            Label:
                text: " Graph speed "

            Label:
                text: " Graph aceleration "

            Label:
                text: " Graph from "

            Label:
                text: " Graph aceleration "

            Label:
                text: " Graph aceleration "

            Image:
                id: imageView
                source: 'graph1.png'
                allow_stretch: True

        Button:
            text:"Call the police"
            on_press: root.pressed()
            on_release:
                app.root.current = "second"
                root.manager.transition.direction = "left"



<SecondWindow>:
    name: "second"
    GridLayout:
        cols:1
        size: root.width, root.height

        Button:
            text: "I'm not feeling well"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button:
            text: "I think I'll be robbed"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button:
            text: "Other problem"
            on_release:
                app.root.current = "main"
                root.manager.transition.direction = "right"